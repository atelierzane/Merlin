<Page x:Class="MerlinAdministrator.Pages.LandingPages.DepartmentManagerLandingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MerlinAdministrator.Pages.LandingPages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="810"
      Title="CatalogManagerLandingPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Background="White" >
            <StackPanel>
                <Button Content="View All" Width="125" Height="30" Margin="5,15,5,5" Click="OnBtnViewDepartments_Click" />
                <Button Content="Add Department" Width="125" Height="30" Margin="5" Click="OnBtnAddDepartment_Click"/>
                <Button Content="Edit Department" Width="125" Height="30" Margin="5" Click="OnBtnEditDepartment_Click" />
                <Button Content="Remove Department" Width="125" Height="30" Margin="5" />
            </StackPanel>
        </Border>

        <Frame x:Name="departmentManagerFrame" Grid.Column="1" NavigationUIVisibility="Hidden" />

    </Grid>
</Page>
