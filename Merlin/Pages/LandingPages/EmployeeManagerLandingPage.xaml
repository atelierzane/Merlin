<Page x:Class="MerlinAdministrator.Pages.LandingPages.EmployeeManagerLandingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MerlinAdministrator.Pages.LandingPages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="810"
      Title="CatalogManagerLandingPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Background="White" >
            <StackPanel>
                <Button Content="Search" Width="125" Height="30" Margin="5,15,5,5" Click="OnBtnSearch_Click"  />
                <Button Content="Add Employee" Width="125" Height="30" Margin="5" Click="OnBtnAddEmployee_Click" />
                <Button Content="Edit Employee" Width="125" Height="30" Margin="5" Click="OnBtnEditEmployee_Click" />
                <Button Content="Remove Employee" Width="125" Height="30" Margin="5" Click="OnBtnRemoveEmployee_Click" />
            </StackPanel>
        </Border>

        <Frame x:Name="employeeManagerFrame" NavigationUIVisibility="Hidden" Grid.Column="1"/>

    </Grid>
</Page>
