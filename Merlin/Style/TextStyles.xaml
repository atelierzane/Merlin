<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="PageHeaderTitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Inter" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource HeaderTextColor_brush}"/>
    </Style>

    <Style x:Key="PageHeaderText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Inter" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource HeaderTextColor_brush}"/>
    </Style>

    <Style x:Key="ControlHeaderText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Inter" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#181818"/>
    </Style>

    <Style x:Key="windowTitleText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontFamily" Value="Inter" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="#F1F1F1"/>
        <Setter Property="Margin" Value="15,10,10,10" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Color x:Key="windowBackgroundGradientStop1">#F1F1F1</Color>
    <Color x:Key="windowBackgroundGradientStop2">#E1E1E1</Color>

    <Color x:Key="windowBackgroundGradientStop1_Dark">#252525</Color>
    <Color x:Key="windowBackgroundGradientStop2_Dark">#181818</Color>

    <Color x:Key="greyStop1">#737373</Color>
    <Color x:Key="greyStop2">#252525</Color>


   



</ResourceDictionary>