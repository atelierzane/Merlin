<Window x:Class="MerlinBackOffice.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MerlinBackOffice"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Background="#C9C9C9"
        WindowStartupLocation="CenterScreen"
        Title="Merlin Back Office" Height="675" Width="275">
    <Grid>
        <StackPanel>
            <Button Style="{StaticResource LightMinimalistButtonStyle_Inventory}" Width="235" Margin="5,25,5,5" Click="OnBtnInventory_Click" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Inventory [F3]" Style="{StaticResource LightMinimalistButtonText}" />
                </StackPanel>
            </Button>
            <Button Click="OnBtnReports_Click"
                    Style="{StaticResource LightMinimalistButtonStyle_Inventory}" Width="235" Margin="5,10,5,5" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Reports [F4]" Style="{StaticResource LightMinimalistButtonText}" />
                </StackPanel>
            </Button>
            <Button Style="{StaticResource LightMinimalistButtonStyle_Inventory}" Width="235" Margin="5,10,5,5" Click="OnBtnConfiguration_Click" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Configuration [F5]" Style="{StaticResource LightMinimalistButtonText}"  />
                </StackPanel>
            </Button>
            <Button Click="OnBtnTradeHold_Click"
                    Style="{StaticResource LightMinimalistButtonStyle_Inventory}" Width="235" Margin="5,10,5,5" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Trade Hold [F6]" Style="{StaticResource LightMinimalistButtonText}" />
                </StackPanel>
            </Button>
            <Button Style="{StaticResource LightMinimalistButtonStyle_Inventory}" Width="235" Margin="5,10,5,5" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Promotions [F7]" Style="{StaticResource LightMinimalistButtonText}" />
                </StackPanel>
            </Button>
            <Button Click="OnBtnHumanResources_Click"
                    Style="{StaticResource LightMinimalistButtonStyle_Inventory}" Width="235" Margin="5,10,5,5" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Human Resources [F8]" Style="{StaticResource LightMinimalistButtonText}" />
                </StackPanel>
            </Button>
            <Button Style="{StaticResource LightMinimalistButtonStyle_Inventory}" Width="235" Margin="5,10,5,5" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Confiscation [F9]" Style="{StaticResource LightMinimalistButtonText}" />
                </StackPanel>
            </Button>
            <Button Style="{StaticResource LightMinimalistButtonStyle_Inventory}" Width="235" Margin="5,10,5,5" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Label Printing [F10]" Style="{StaticResource LightMinimalistButtonText}" />
                </StackPanel>
            </Button>

            <Rectangle Width="250" Height="1" Fill="Black" Margin="10" Opacity=".1"/>

            <Button Click="OnBtnAdministratorOptions_Click"
                    Style="{StaticResource LightMinimalistButtonStyle_Inventory}" Width="235" Margin="5,5,5,5" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Administrator Options [F12]" Style="{StaticResource LightMinimalistButtonText}" />
                </StackPanel>
            </Button>


            <Button Click="OnBtnBack_Click"
                    Style="{StaticResource DarkMinimalistButtonStyle_Inventory }" Width="185" Height="30" Margin="5,10,5,5" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Back [ESC]" Style="{StaticResource LightMinimalistButtonText}" />
                </StackPanel>
            </Button>
            

        </StackPanel>
    </Grid>
</Window>
