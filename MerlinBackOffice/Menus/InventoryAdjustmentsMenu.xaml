<Window x:Class="MerlinBackOffice.Menus.InventoryAdjustmentsMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MerlinBackOffice.Menus"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Background="#C9C9C9"
        Title="Inventory Adjustments" Height="350" Width="275">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="91*"/>
            <ColumnDefinition Width="159*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.ColumnSpan="2">

            <Button Click="OnSellableAdjustments_Click"
                    Style="{StaticResource LightMinimalistButtonStyle_Inventory}" Width="235" Margin="5,25,5,5"
                                >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Adjust Sellable on Hand [F1]" Style="{StaticResource LightMinimalistButtonText}" />
                </StackPanel>
            </Button>

            <Button  Click="OnDefectiveAdjustments_Click"
                    Style="{StaticResource LightMinimalistButtonStyle_Inventory}" Width="235" Margin="5,5,5,5"
                                >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Adjust Defective on Hand [F2]" Style="{StaticResource LightMinimalistButtonText}" />
                </StackPanel>
            </Button>

            <Button   Opacity=".45" IsEnabled="False"
                    Style="{StaticResource LightMinimalistButtonStyle_Inventory}" Width="235" Margin="5,5,5,5"
                                >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Adjust Trade Hold Sellable [F3]" Style="{StaticResource LightMinimalistButtonText}" />
                </StackPanel>
            </Button>

            <Button   Opacity=".45" IsEnabled="False"
                    Style="{StaticResource LightMinimalistButtonStyle_Inventory}" Width="235" Margin="5,5,5,5"
                                >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Adjust Trade Hold Defective [F4]" Style="{StaticResource LightMinimalistButtonText}" />
                </StackPanel>
            </Button>

            <Button  
                    Style="{StaticResource LightMinimalistButtonStyle_Inventory}" Width="235" Margin="5,5,5,5"
                                >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Back [ESC]" Style="{StaticResource LightMinimalistButtonText}" />
                </StackPanel>
            </Button>




        </StackPanel>

    </Grid>
</Window>
