<Window x:Class="MerlinBackOffice.Windows.ConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MerlinBackOffice.Windows"
        mc:Ignorable="d"
        Title="ConfigurationWindow" Height="300" Width="275">
    <Grid>
        <StackPanel>
            <StackPanel Margin="10">
                <TextBlock Text="Store Number:"/>
                <TextBox x:Name="txtStoreNumber"/>
                <Button Content="Save" Margin="10" Click="SaveButton_Click"/>
            </StackPanel>

            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10">
                    <TextBlock Text="Database Connection: " Width="100" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtDatabaseConnection" Width="200" Height="25"/>
                </StackPanel>

                <Button Content="Save" Width="100" Height="30" HorizontalAlignment="Left" Margin="10,20,0,0" Click="OnSave_Click"/>
            </StackPanel>
        </StackPanel>
       



    </Grid>
</Window>
