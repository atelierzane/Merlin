<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="PerformanceTitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Inter" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Foreground" Value="#181818"/>

    </Style>

    <Style x:Key="PerformanceMetric" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Inter" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Foreground" Value="#181818"/>

    </Style>

    <Style x:Key="TileButtonText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Inter" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#F1F1F1"/>

    </Style>

    <Style x:Key="TileButtonTextSmall" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Inter" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#F1F1F1"/>

    </Style>

    <Style x:Key="SummaryItemTitleText"
           TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Inter"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="#181818"/>
        <Setter Property="TextAlignment" Value="Left"/>

    </Style>

    <Style x:Key="SummaryItemDetailsText"
           TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="Inter"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="Gray"/>
        <Setter Property="TextAlignment" Value="Left"/>

    </Style>

    <Style x:Key="SummaryItemPriceText"
           TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="Inter"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="Gray"/>
        <Setter Property="TextAlignment" Value="Left"/>

    </Style>


    <Style x:Key="BackOfficeText"
           TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="Inter"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="#181818"/>
        <Setter Property="TextAlignment" Value="Left"/>

    </Style>

    <Style x:Key="PerformanceControl_Title"
           TargetType="TextBlock">
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="FontFamily" Value="Inter"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#181818"/>
        <Setter Property="TextAlignment" Value="Left"/>

    </Style>

    <Style x:Key="PerformanceControl_Label"
           TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="Inter"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="#181818"/>
        <Setter Property="TextAlignment" Value="Left"/>

    </Style>



</ResourceDictionary>