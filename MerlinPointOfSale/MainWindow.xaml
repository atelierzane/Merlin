<Window x:Class="MerlinPointOfSale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MerlinPointOfSale"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button x:Name="StartTransactionButton" Content="Start a Transaction" Height="35" Width="200" Margin="5,25,5,5" Click="onBtnStartTransaction_Click"/>
            <Button x:Name="BtnConfiguration" Content="Configuration" Height="35" Width="200" Margin="5,25,5,5" Click="onBtnConfiguration_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
