<Page x:Class="MerlinPointOfSale.Pages.FinalizeTransactionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MerlinPointOfSale.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FinalizeTransactionPage">

    <Grid>
        <Border Background="Gray" Opacity=".8">
            <StackPanel VerticalAlignment="Center">
                <Button Content="Cash" Height="30" Width="200" Margin="10" Click="BtnOnCash_Click"/>
                <Button Content="Credit/Debit" Height="30" Width="200" Margin="10" Click="BtnOnCard_Click"/>
                <Button Content="Return to Transaction" Height="30" Width="200" Margin="10" Click="BtnOnCancel_Click"/>
                <Button Content="Print Bill" Height="30" Width="200" Margin="10" Click="BtnPrintBill_Click"/>
            </StackPanel>
        </Border>
        
    </Grid>
</Page>
