<Page x:Class="MerlinPointOfSale.Pages.ReleaseConfigurationPages.LocationSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="LocationSettingsPage">

    <Grid Margin="10">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Location ID: " Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="txtLocationID" Width="200" Height="25"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Register: " Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="txtRegisterNumber" Width="200" Height="25"/>
            </StackPanel>
            <Button Content="Save" Width="100" Height="30" HorizontalAlignment="Left" Margin="10,20,0,0" Click="OnSave_Click"/>
        </StackPanel>
    </Grid>
</Page>
