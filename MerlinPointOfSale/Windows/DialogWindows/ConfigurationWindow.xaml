<Window x:Class="MerlinPointOfSale.Windows.DialogWindows.ConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MerlinPointOfSale.Windows.DialogWindows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ConfigurationWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <StackPanel>
            <Button Content="Location and Register" Height="35" Width="175" Margin="5,25,5,5" Click="OnBtnLocationSettings_Click"/>
            <Button Content="Taxes / Financial" Height="35" Width="175" Margin="5" Click="OnBtnTaxFianancialSettings_Click"/>
            <Button Content="Quick Select Settings" Height="35" Width="175" Margin="5" Click="OnBtnQuickSelectSettings_Click"/>
            <Button Content="Database Settings" Height="35" Width="175" Margin="5" Click="OnBtnDatabaseSettings_Click"/>
        </StackPanel>


        <Frame x:Name="ConfigurationFrame" NavigationUIVisibility="Hidden" Grid.Column="1"/>

    </Grid>
</Window>
