<Window x:Class="MerlinPointOfSale.Windows.DialogWindows.TipEntryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MerlinPointOfSale.Windows.DialogWindows"
        mc:Ignorable="d"
        Title="TipEntryDialog" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Enter Tip Amount:" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox x:Name="TipAmountTextBox" Width="150" Height="30" FontSize="14" 
                     HorizontalAlignment="Center" TextAlignment="Right"
                     PreviewTextInput="TipAmountTextBox_PreviewTextInput"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                <Button Content="OK" Width="75" Height="30" Click="OkButton_Click" Margin="10"/>
                <Button Content="Cancel" Width="75" Height="30" Click="CancelButton_Click" Margin="10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
